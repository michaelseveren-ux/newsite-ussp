---
interface Props {
  title: string;
  description: string;
  image?: string;
  href?: string;
}

const { title, description, image, href } = Astro.props;

const CardTag = href ? 'a' : 'div';
---

<CardTag
  href={href}
  class:list={[
    'group block bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300',
    href && 'cursor-pointer',
  ]}
>
  {image && (
    <div class="aspect-[4/3] overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </div>
  )}
  <div class="p-6">
    <h3 class="text-xl font-bold text-primary-900 mb-2 group-hover:text-accent-600 transition-colors">
      {title}
    </h3>
    <p class="text-gray-600">
      {description}
    </p>
  </div>
</CardTag>
