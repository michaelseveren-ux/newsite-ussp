---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/PostCard.astro';
import CategoryFilter from '../../components/CategoryFilter.astro';
import { getAllPosts } from '../../data/posts';

const posts = getAllPosts();
const hasPosts = posts.length > 0;
---

<Layout
  title="Press & Videos | US Sport Planes"
  description="News, stories, and videos from US Sport Planes. Stay updated on the latest in light sport aviation."
>
  <Navigation transparent={false} />

  <!-- Hero Section -->
  <section class="pt-28 pb-12 bg-primary-900">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Press & Videos
      </h1>
      <p class="text-xl text-white/80 max-w-2xl">
        News, stories, and videos from the world of sport aviation.
      </p>
    </div>
  </section>

  <!-- Filters and Posts -->
  <section class="py-12 bg-gray-50">
    <div class="container-custom">
      {hasPosts ? (
        <>
          <!-- Category Filter -->
          <div class="mb-8">
            <CategoryFilter />
          </div>

          <!-- Posts Grid -->
          <div id="posts-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
              <PostCard
                slug={post.slug}
                title={post.title}
                excerpt={post.excerpt}
                featuredImage={post.featuredImage}
                category={post.category}
                contentType={post.contentType}
                publishDate={post.publishDate}
              />
            ))}
          </div>

          <!-- Empty Filter State -->
          <div id="empty-filter-state" class="hidden text-center py-16">
            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">No posts found in this category</h3>
            <p class="text-gray-500">Try selecting a different category.</p>
          </div>
        </>
      ) : (
        <!-- No Posts Empty State -->
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No posts yet</h3>
          <p class="text-gray-500">Check back soon for news and updates!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-900">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Stay Connected
      </h2>
      <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
        Have questions about sport aviation or want to learn more about our aircraft? We'd love to hear from you.
      </p>
      <a href="/contact" class="btn-primary text-lg px-8 py-4">
        Contact Us
      </a>
    </div>
  </section>

  <Footer />
</Layout>
