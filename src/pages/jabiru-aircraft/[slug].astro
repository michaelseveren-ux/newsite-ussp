---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getAllJabiruModels, getJabiruModelBySlug } from '../../data/jabiru';

export function getStaticPaths() {
  const models = getAllJabiruModels();
  return models.map((model) => ({ params: { slug: model.slug } }));
}

const { slug } = Astro.params;
const model = getJabiruModelBySlug(slug);

if (!model) {
  return Astro.redirect('/404');
}

function formatPrice(price: number): string {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    minimumFractionDigits: 0,
    maximumFractionDigits: 0,
  }).format(price);
}

const specs = [
  {
    category: 'Performance',
    items: [
      { label: 'Cruise Speed', value: model.specs.cruiseSpeed },
      { label: 'Max Speed', value: model.specs.maxSpeed },
      { label: 'Stall Speed', value: model.specs.stallSpeed },
      { label: 'Range', value: model.specs.range },
      { label: 'Rate of Climb', value: model.specs.rateOfClimb },
      { label: 'Service Ceiling', value: model.specs.serviceCeiling },
      { label: 'Takeoff Distance', value: model.specs.takeoffDistance },
      { label: 'Landing Distance', value: model.specs.landingDistance },
      { label: 'Fuel Capacity', value: model.specs.fuelCapacity },
      { label: 'Fuel Burn', value: model.specs.fuelBurn },
    ],
  },
  {
    category: 'Dimensions',
    items: [
      { label: 'Wingspan', value: model.specs.wingspan },
      { label: 'Length', value: model.specs.length },
      { label: 'Height', value: model.specs.height },
      { label: 'Wing Area', value: model.specs.wingArea },
    ],
  },
  {
    category: 'Weights',
    items: [
      { label: 'Empty Weight', value: model.specs.emptyWeight },
      { label: 'Max Gross Weight', value: model.specs.maxGrossWeight },
      { label: 'Useful Load', value: model.specs.usefulLoad },
      { label: 'Seating', value: model.specs.seating },
    ],
  },
  {
    category: 'Engine',
    items: [
      { label: 'Engine', value: model.specs.engine },
      { label: 'Horsepower', value: model.specs.horsepower },
      { label: 'Propeller', value: model.specs.propeller },
    ],
  },
];
---

<Layout
  title={`Jabiru ${model.name} | US Sport Planes`}
  description={model.description}
>
  <Navigation transparent={false} />

  <!-- Breadcrumb -->
  <div class="bg-primary-900 pt-24 pb-4">
    <div class="container-custom">
      <nav class="flex items-center gap-2 text-sm text-white/60">
        <a href="/jabiru-aircraft" class="hover:text-white transition-colors">Jabiru Aircraft</a>
        <span>/</span>
        <span class="text-white">{model.name}</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="bg-primary-900 pb-16 lg:pb-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div>
          <p class="text-accent-500 font-semibold text-sm uppercase tracking-wider mb-4">
            Official Jabiru Importer for the Americas
          </p>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-3 leading-tight">
            Jabiru {model.name}
          </h1>
          <p class="text-xl text-accent-500 font-medium mb-6">{model.tagline}</p>
          <p class="text-lg text-white/80 mb-8 leading-relaxed">{model.description}</p>

          <!-- Key highlights -->
          <ul class="space-y-2 mb-8">
            {model.highlights.slice(0, 4).map((highlight) => (
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-white/80">{highlight}</span>
              </li>
            ))}
          </ul>

          <!-- Price + CTA -->
          <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 p-5 bg-white/10 rounded-xl border border-white/20">
            <div>
              <div class="text-3xl font-bold text-white">{formatPrice(model.basePrice)}</div>
              <div class="text-sm text-white/60">Base price*</div>
            </div>
            <a
              href={`/contact?aircraft=jabiru-${model.slug}`}
              class="btn-primary whitespace-nowrap"
            >
              Request Quote
            </a>
          </div>
        </div>

        <!-- Image -->
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden bg-primary-800">
            <img
              src={model.images[0]?.url || `https://placehold.co/1200x800/1e2a5e/ffffff?text=Jabiru+${model.name}`}
              alt={model.images[0]?.alt || `Jabiru ${model.name}`}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-accent-500/20 rounded-xl -z-10 hidden lg:block"></div>
          <div class="absolute -top-4 -right-4 w-32 h-32 bg-accent-500/10 rounded-xl -z-10 hidden lg:block"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Specifications -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-primary-900 mb-4">
          Full Specifications
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Complete technical specifications for the Jabiru {model.name}.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {specs.map((group) => (
          <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
            <div class="bg-primary-900 px-6 py-3">
              <h3 class="text-white font-semibold tracking-wide uppercase text-sm">{group.category}</h3>
            </div>
            <div class="divide-y divide-gray-100">
              {group.items.map((item) => (
                <div class="flex justify-between items-center px-6 py-3">
                  <span class="text-gray-600 text-sm">
                    {item.label}
                    {item.label === 'Engine' && (
                      <a
                        href="/jabiru-aircraft/engine"
                        class="ml-2 text-accent-500 hover:text-accent-600 text-xs font-medium underline underline-offset-2"
                      >
                        Learn more
                      </a>
                    )}
                  </span>
                  <span class="font-semibold text-primary-900 text-sm">{item.value}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <p class="text-center text-sm text-gray-500 mt-8">
        *Base prices shown. Final price varies based on avionics, options, and delivery location.
      </p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-900">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Interested in the Jabiru {model.name}?
      </h2>
      <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
        Contact us to schedule a demo flight, get a personalized quote, or learn more about the ordering process.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={`/contact?aircraft=jabiru-${model.slug}`} class="btn-primary text-lg px-8 py-4">
          Request Quote
        </a>
        <a href="/jabiru-aircraft" class="btn-secondary text-lg px-8 py-4">
          View All Models
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
