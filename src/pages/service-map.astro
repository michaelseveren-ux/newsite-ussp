---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Section from '../components/Section.astro';
import Footer from '../components/Footer.astro';
import MapContainer from '../components/MapContainer';
---

<Layout
  title="Service & Flight Training | Find Jabiru Service Centers & Flight Schools"
  description="Find authorized Jabiru service centers and flight schools near you. Interactive map with locations across the country."
>
  <Navigation transparent={false} />

  <!-- Hero Section -->
  <section class="bg-primary-900 pt-28 pb-16 lg:pb-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div>
          <p class="text-accent-500 font-semibold text-sm uppercase tracking-wider mb-4">Service & Training</p>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
            Find Service Centers<br />& Flight Schools
          </h1>
          <p class="text-lg text-white/80 mb-8 leading-relaxed">
            Locate authorized Jabiru service centers and flight schools across the country.
            Whether you need maintenance, repairs, or flight training, find trusted partners near you.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="#service-map" class="btn-primary">
              View Map
            </a>
            <a href="/contact" class="btn-secondary">
              Contact Us
            </a>
          </div>
        </div>
        <!-- Image -->
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden bg-primary-800">
            <img
              src="/images/hero-aircraft.jpg"
              alt="Jabiru aircraft service and flight training"
              class="w-full h-full object-cover"
            />
          </div>
          <!-- Accent decoration -->
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-accent-500/20 rounded-xl -z-10 hidden lg:block"></div>
          <div class="absolute -top-4 -right-4 w-32 h-32 bg-accent-500/10 rounded-xl -z-10 hidden lg:block"></div>
        </div>
      </div>
    </div>
  </section>

  <Section
    id="service-map"
    background="white"
  >
    <MapContainer client:only="react" />
  </Section>

  <Footer />
</Layout>
